<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AboutMe">

    <ImageView
            android:id="@+id/fotoProfile"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_width="160dp"
            android:layout_height="160dp"/>

    <TextView
            android:text="Sigit Suryono"
            android:drawableStart="@drawable/ic_person_black"
            android:textAlignment="center"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/email"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:padding="5dp"
            android:text="sigitharsy25@gmail.com"
            android:textColor="@android:color/black"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/detail"
            android:drawableStart="@drawable/ic_grade_black_24dp"
            android:padding="5dp"
            android:text="Dicoding Profile (Klik)"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Description Apps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:textColor="@android:color/black"
            android:padding="5dp"
            android:textAlignment="center"
            android:gravity="center"
            android:text="The purpose of this application is to complete the certification submission in Dicoding Indonesia for Class  Belajar Membuat Aplikasi Android untuk Pemula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>